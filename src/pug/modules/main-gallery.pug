section.main-gallery.section
    .main-gallery__wrapper
        .main-gallery__header.section__header
            h2.main-gallery__header-title.section__title ФОТОГАЛЕРЕЯ
            a.main-gallery__header-link.section__link(href="#") Все фото &nbsp;
                svg.icon
                    use(href="icons/icons.svg#arr-right-2")
    .main-gallery__slider
        .main-gallery__thumbs.thumbs
            .territory__slide-thumbs-item.thumbs-item(data-bg=`url(${require('../../images/thumb-1.jpg')})`)
            .territory__slide-thumbs-item.thumbs-item(data-bg=`url(${require('../../images/thumb-2.jpg')})`)
            .territory__slide-thumbs-item.thumbs-item(data-bg=`url(${require('../../images/thumb-3.jpg')})`)
        .main-gallery__slider-container.swiper-container
            .main-gallery__progress-bar.slider-progress-bar  
            button.main-gallery__slider-btn.left.slider-btn.icon-btn
                svg.icon
                    use(href="icons/icons.svg#arr-left")
            button.main-gallery__slider-btn.right.slider-btn.icon-btn
                svg.icon
                    use(href="icons/icons.svg#arr-right")
            .main-gallery__slider-wrapper.swiper-wrapper
                each i in [1,2,3]
                    .main-gallery__slide.swiper-slide(data-bg=`url(${require('../../images/gallery-image-1.jpg')})`)




